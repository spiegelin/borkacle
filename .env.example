# This is .env is needed only for Docker Compose
# Telegram bot configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_BOT_NAME=your_bot_name

# Database configuration
DB_URL=jdbc:oracle:thin:@oraclebot_high?TNS_ADMIN=/path/to/wallet
DB_USERNAME=username
DB_PASSWORD=password

# Service URLs
BOT_SERVICE_URL=http://bot:8080
CONTROLLER_SERVICE_URL=http://controller:8080
FRONTEND_SERVICE_URL=http://frontend:3000

# Oracle wallet configuration
WALLET_LOCATION=(SOURCE=(METHOD=file)(METHOD_DATA=(DIRECTORY=/path/to/wallet)))
TNS_ADMIN=/path/to/wallet
TRUST_STORE=/path/to/wallet/truststore.jks
TRUST_STORE_PASSWORD=password
KEY_STORE=/path/to/wallet/keystore.jks
KEY_STORE_PASSWORD=password

# JWT Configuration
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRATION_MS=86400000 

# Frontend configuration
NEXT_PUBLIC_CONTROLLER_API_URL=/api/proxy
NEXT_PUBLIC_APP_URL=http://frontend 